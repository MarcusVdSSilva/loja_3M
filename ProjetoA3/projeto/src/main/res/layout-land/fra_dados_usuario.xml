<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.FraDadosUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fra_dados_usuario_iv_foto_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/usuario64"
                android:layout_gravity="center">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/fra_dados_usuario_tv_nome_usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do usuario"
                android:textSize="20dp"
                android:layout_gravity="center">
            </TextView>

            <Button
                android:id="@+id/fra_dados_usuario_bt_info_basica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/basic_info"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:drawableRight="@drawable/seta_direita"
                android:drawableLeft="@drawable/editar">
            </Button>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>