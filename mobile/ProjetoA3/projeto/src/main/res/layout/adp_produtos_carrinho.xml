<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/adp_produtos_carrinho_carrinho_iv_foto_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>


        <TextView
            android:id="@+id/adp_produtos_carrinho_tv_nome_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Nome produto"
            android:textSize="26dp">
        </TextView>

        <ImageButton
            android:id="@+id/adp_produtos_carrinho_ib_remover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/remover"
            android:layout_gravity="center"
            android:background="@null">
        </ImageButton>

        <TextView
            android:id="@+id/adp_produtos_carrinho_tv_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="1">
        </TextView>


        <ImageButton
            android:id="@+id/adp_produtos_carrinho_ib_adicionar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/adicionar"
            android:layout_gravity="center"
            android:background="@null">
        </ImageButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>